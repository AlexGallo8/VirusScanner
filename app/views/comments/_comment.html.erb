<div class="bg-gray-50 p-4 rounded-lg" id="comment-<%= comment.id %>">
  <div class="flex justify-between items-start">
    <div>
      <p class="font-semibold"><%= comment.user.username %></p>
      <p class="text-sm text-gray-500"><%= l comment.created_at, format: :long %></p>
    </div>
    <% if comment.user == current_user %>
      <div class="flex space-x-2">
        <%= link_to edit_comment_path(comment), 
            class: "text-blue-500 hover:text-blue-600" do %>
          <i class="fas fa-edit"></i>
        <% end %>
        <%= button_to comment_path(comment), 
            method: :delete,
            class: "text-red-500 hover:text-red-600",
            form: { data: { confirm: 'Sei sicuro?' } } do %>
          <i class="fas fa-trash"></i>
        <% end %>
      </div>
    <% end %>
  </div>
  <p class="mt-2 text-gray-700"><%= comment.content %></p>
</div>