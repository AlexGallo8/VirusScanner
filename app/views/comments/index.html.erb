<div class="max-w-6xl mx-auto p-6">
  <div class="bg-white/50 backdrop-blur-sm shadow-xl rounded-lg overflow-hidden">
    <!-- Header -->
    <div class="border-b border-gray-100 p-6">
      <div class="flex justify-between items-center">
        <div class="flex items-center space-x-3">
          <div class="p-2 rounded-lg">
            <i class="fas fa-comments text-blue-600 text-4xl"></i>
          </div>
          <h1 class="text-2xl font-bold text-blue-600 bg-clip-text">
            Cronologia Commenti
          </h1>
        </div>
        <div class="bg-blue-50 text-blue-700 px-6 py-2 rounded-full font-medium animate-pulse">
          <%= pluralize(@comments.count, 'commento', 'commenti') %>
        </div>
      </div>
    </div>

    <div class="p-6">
      <% if @comments.empty? %>
        <div class="text-center py-16 space-y-4">
          <i class="fas fa-comment-slash text-gray-400 text-6xl animate-bounce"></i>
          <h2 class="text-xl font-semibold text-gray-900">Nessun commento</h2>
          <p class="text-gray-500">Non hai ancora lasciato nessun commento</p>
        </div>
      <% else %>
        <div class="overflow-x-auto mx-auto">
          <table class="w-full">
            <thead>
              <tr class="border-b border-gray-100">
                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">File</th>
                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Commento</th>
                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Data</th>
                <th class="px-6 py-4 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Azioni</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
              <% @comments.each do |comment| %>
                <tr class="group hover:bg-blue-50/50 transition-all duration-200 ease-in-out hover:scale-[1.01]">
                  <td class="px-6 py-4">
                    <div class="flex items-center space-x-4">
                      <div class="p-2 rounded-lg bg-gray-50 group-hover:bg-blue-100/50 transition-all duration-200 group-hover:rotate-6">
                        <i class="fas fa-file text-gray-500 text-xl"></i>
                      </div>
                      <span class="font-medium text-gray-900">
                        <%= link_to comment.scan.file_name, 
                            scan_path(comment.scan),
                            class: "hover:text-blue-600" %>
                      </span>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-sm text-gray-700">
                      <%= comment.content %>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="flex items-center text-sm text-gray-500">
                      <i class="fas fa-clock mr-2"></i>
                      <%= l(comment.created_at, format: :long) %>
                    </div>
                  </td>
                  <td class="px-6 py-4 text-right">
                    <div class="flex justify-end space-x-2">
                      <%= link_to comment_path(comment),
                          method: :delete,
                          data: { confirm: 'Sei sicuro?' },
                          class: "inline-flex items-center px-3 py-2 rounded-lg bg-red-100 text-red-600 
                                 hover:bg-red-100 transition-colors duration-200" do %>
                        <i class="fas fa-trash mr-2"></i>
                        Elimina
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
    </div>
  </div>
</div>