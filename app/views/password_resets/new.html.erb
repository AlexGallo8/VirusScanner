<h1 class="text-gray-800 font-semibold text-xl mb-4">Reset Your Password</h1>

<%= form_with model: @user, url: password_reset_path do |form| %>

  <div class="mb-6">
        <%= form.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.email_field :email, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

  <div class="flex items-center justify-between">
      <%= form.submit "Reset Your Password", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>

<%end%>