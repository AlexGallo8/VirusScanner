<div class="bg-gray-100 flex items-center justify-center rounded-2xl p-8 dark:bg-gray-800/80">
    <div class="max-w-md ">
        <div class="text-center">
            <h2 class="mt-6 text-2xl font-extrabold text-gray-900 dark:text-gray-500">Reset Password</h2>
            <p class="mt-2 text-sm text-gray-600">Inserisci la tua email per reimpostare la password</p>
        </div>

        <%= form_with model: @user, url: password_reset_path, class: "mt-2 space-y-1 bg-white p-4 rounded-2xl shadow-xl dark:bg-gray-900" do |form| %>
            <div class="space-y-6">
                <div>
                    <%= form.label :email, class: "block text-sm font-bold text-gray-700 mb-2" %>
                    <%= form.email_field :email, 
                        class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800/80 dark:border-gray-700 dark:text-gray-500",
                        placeholder: "Il tuo indirizzo email" %>
                </div>

                <%= form.submit "Reset Password", 
                    class: "w-full flex justify-center py-3 px-4 border border-gray-300 rounded-lg shadow-sm text-sm font-semibold text-gray-700 bg-white hover:bg-gray-500 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transform transition-all duration-200 hover:-translate-y-0.5" %>
            </div>
        <% end %>
    </div>
</div>