<div class="min-h-screen bg-gray-100 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div class="text-center">
            <h2 class="mt-6 text-4xl font-extrabold text-gray-900">Benvenuto in VirusScanner</h2>
            <p class="mt-2 text-sm text-gray-600">registrati per accedere all'area personale</p>
        </div>

        <%= form_with(model: user, id:"registration_form", url: registration_path, data: { turbo_frame: "_top" }, class: "mt-8 space-y-6 bg-white p-8 rounded-2xl shadow-xl") do |form| %>
            
            <% if form.object.errors.any? %>
                <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded" role="alert">
                    <% form.object.errors.full_messages.each do |message| %>
                        <p class="text-sm font-medium"><%= message %></p>
                    <% end %>
                </div>
            <% end %>

            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

            <div class="space-y-6">
                <div>
                    <%= form.label :email, class: "block text-sm font-bold text-gray-700 mb-2" %>
                    <%= form.email_field :email, 
                        class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                        placeholder: "Il tuo indirizzo email" %>
                </div>

                <div>
                    <%= form.label :password, class: "block text-sm font-bold text-gray-700 mb-2" %>
                    <%= form.password_field :password, 
                        class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                        placeholder: "La tua password" %>
                </div>

                <div>
                    <%= form.label :password_confirmation, class: "block text-sm font-bold text-gray-700 mb-2" %>
                    <%= form.password_field :password_confirmation, 
                        class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                        placeholder: "Conferma la password" %>
                </div>

                <%= form.submit "Sign Up", 
                    class: "w-full flex justify-center py-3 px-4 border border-gray-300 rounded-lg shadow-sm text-sm font-semibold text-gray-700 bg-white hover:bg-gray-500 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transform transition-all duration-200 hover:-translate-y-0.5" %>
            </div>
        <% end %>

        <div class="mt-6">
            <div class="relative">
                <div class="absolute inset-0 flex items-center">
                    <div class="w-full border-t border-gray-300"></div>
                </div>
                <div class="relative flex justify-center text-sm">
                    <span class="px-4 bg-white text-gray-500">oppure</span>
                </div>
            </div>

            <%= button_to '/auth/auth0?connection=google-oauth2', 
                method: :post, 
                authenticity_token: true, 
                class: "mt-6 w-full inline-flex items-center justify-center py-3 px-4 rounded-lg shadow-sm bg-white border border-gray-300 text-sm font-medium text-gray-700 hover:bg-gray-200 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transform transition-all duration-200 hover:-translate-y-0.5" do %>
                <svg style="width: 24px; height: 24px;" class="mr-2" viewBox="0 0 48 48">
                    <path fill="#4285F4" d="M42.7 24c0-1.5-.1-2.9-.4-4.2H24v8h10.6c-.5 2.4-1.9 4.5-4 5.9v4.9h6.5c3.8-3.5 6-8.7 6-14.6z"/>
                    <path fill="#34A853" d="M24 44c5.4 0 10-1.8 13.1-4.9l-6.5-4.9c-1.8 1.2-4.1 1.9-6.6 1.9-5.1 0-9.4-3.4-10.9-8H6.5v5.1C9.6 39.6 16.3 44 24 44z"/>
                    <path fill="#FBBC05" d="M13.1 28.1c-.4-1.2-.6-2.5-.6-3.8 0-1.3.2-2.6.6-3.8v-5.1H6.5C5.6 17.7 5 20.8 5 24s.6 6.3 1.5 8.6l6.6-4.5z"/>
                    <path fill="#EA4335" d="M24 11.9c2.9 0 5.4 1 7.4 2.9l5.8-5.8C33.9 5.9 29.3 4 24 4 16.3 4 9.6 8.4 6.5 14.9l6.6 5.1c1.5-4.7 5.8-8.1 10.9-8.1z"/>
                </svg>
                Continua con Google
            <% end %>

            <%= button_to '/auth/auth0?connection=github', 
                method: :post, 
                authenticity_token: true, 
                class: "mt-3 w-full inline-flex items-center justify-center py-3 px-4 rounded-lg shadow-sm bg-white border border-gray-300 text-sm font-medium text-gray-700 hover:bg-gray-200 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transform transition-all duration-200 hover:-translate-y-0.5" do %>
                <svg style="width: 24px; height: 24px;" class="mr-2" viewBox="0 0 98 96">
                    <path fill="#24292F" d="M48.854 0C21.839 0 0 22 0 49.217c0 21.756 13.993 40.172 33.405 46.69 2.427.49 3.316-1.059 3.316-2.362 0-1.141-.08-5.052-.08-9.127-13.59 2.934-16.42-5.867-16.42-5.867-2.184-5.704-5.42-7.17-5.42-7.17-4.448-3.015.324-3.015.324-3.015 4.934.326 7.523 5.052 7.523 5.052 4.367 7.496 11.404 5.378 14.235 4.074.404-3.178 1.699-5.378 3.074-6.6-10.839-1.141-22.243-5.378-22.243-24.283 0-5.378 1.94-9.778 5.014-13.2-.485-1.222-2.184-6.275.486-13.038 0 0 4.125-1.304 13.426 5.052a46.97 46.97 0 0 1 12.214-1.63c4.125 0 8.33.571 12.213 1.63 9.302-6.356 13.427-5.052 13.427-5.052 2.67 6.763.97 11.816.485 13.038 3.155 3.422 5.015 7.822 5.015 13.2 0 18.905-11.404 23.06-22.324 24.283 1.78 1.548 3.316 4.481 3.316 9.126 0 6.6-.08 11.897-.08 13.526 0 1.304.89 2.853 3.316 2.364 19.412-6.52 33.405-24.935 33.405-46.691C97.707 22 75.788 0 48.854 0z"/>
                </svg>
                Continua con GitHub
            <% end %>
        </div>
    </div>
</div>