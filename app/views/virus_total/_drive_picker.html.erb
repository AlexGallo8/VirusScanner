<div class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full" id="drive-modal">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
    <div class="mt-3">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Select a file from Google Drive</h3>
      <div class="mt-2 max-h-96 overflow-y-auto">
        <% @files.files.each do |file| %>
          <div class="p-2 hover:bg-gray-100 cursor-pointer rounded" 
               onclick="selectDriveFile('<%= file.id %>', '<%= file.name %>')">
            <%= file.name %>
          </div>
        <% end %>
      </div>
      <div class="mt-4 flex justify-end">
        <button onclick="closeDriveModal()" 
                class="px-4 py-2 bg-gray-200 text-gray-800 rounded-md hover:bg-gray-300">
          Cancel
        </button>
      </div>
    </div>
  </div>
</div>